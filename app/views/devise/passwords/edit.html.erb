<section class="col-xs-12 col-sm-6 col-sm-offset-3  <%= controller.controller_name %>-<%= controller.action_name %>-form">
  <div class="title">
    <h2>Change your password</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <div class="inputs row">
      <div class="form-group passgroup group">
        <%= f.password_field :password, autocomplete: "off", class: "input form-control" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.label :password, class: "loglabel control-label" %>
      </div>
      <div class="form-group passgroup group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input form-control" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :password_confirmation, class: "loglabel control-label" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Change my password", class: "auth-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>