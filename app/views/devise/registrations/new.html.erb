<section class="form <%= controller.controller_name %>-<%= controller.action_name %>-form">
  <div class="title">
    <h2>Sign up</h2>

  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="inputs row">
      <div class="fNamegroup group form-group">
        <%= f.text_field :first_name, autofocus: true, class: "form-control input fName" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :first_name, class: "loglabel logfName control-label" %>
      </div>
      <div class="lNamegroup group form-group">
        <%= f.text_field :last_name, autofocus: true, class: "form-control input lName" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :last_name, class: "loglabel loglName control-label" %>
      </div>
      <div class="emailgroup group form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control input email" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :email, class: "loglabel logemail control-label" %>
      </div>
      <div class="form-group passgroup group">
        <%= f.password_field :password, autocomplete: "off", class: "input form-control" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.label :password, class: "loglabel control-label" %>
      </div>
      <div class="form-group passgroup group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input form-control" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :password_confirmation, class: "loglabel control-label" %>
      </div>
    </div>
    <div class="form-group actionbuttons">
      <%= f.submit "Sign up", class: "fillbutton" %>
    </div>
  <% end %>
  <div class="form-group buttons">
    <%= render "devise/shared/links" %>
  </div>
</section>