<section class="col-xs-12 col-sm-6 col-sm-offset-3  <%= controller.controller_name %>-<%= controller.action_name %>-form">
  <div class="title"> 
    <h2>Edit Profile</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: "/profile/#{current_user.id}", html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="inputs row">
      <div class="fNamegroup group form-group">
        <%= f.text_field :first_name, autofocus: true, class: "form-control input fName" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :first_name, class: "loglabel logfName control-label" %>
      </div>
      <div class="lNamegroup group form-group">
        <%= f.text_field :last_name, autofocus: true, class: "form-control input lName" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :last_name, class: "loglabel loglName control-label" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "auth-button" %>
    </div>
  <% end %>
  <div class="title"> 
    <h3>Cancel my account</h3>
  </div>
  <div class="cancel-account-div">
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "cancel-auth-button" %></p>
  </div>
  <%= link_to "Back", root_path %>
</section>