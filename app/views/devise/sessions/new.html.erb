<div class="form <%= controller.controller_name %>-<%= controller.action_name %> <%= controller.controller_name %>-<%= controller.action_name %>-form">
  <div class="title">
    <h2>Log in</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= render 'layouts/shared_error_message' %>
    <div class="inputs row">
      <div class="emailgroup group form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control input email" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :email, class: "loglabel logemail control-label" %>
      </div>
      <div class="form-group passgroup group">
        <%= f.password_field :password, autocomplete: "off", class: "input form-control" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :password, class: "loglabel logpass control-label" %>
      </div>
    </div>
    <div class="form-group actionbuttons">
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>
      <%= f.submit "Log in", class: "auth-button" %>
    </div>
    <div class="form-group buttons">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>