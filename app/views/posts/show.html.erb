<div>
  <div class="post-section">
    <h1 class="post-title"><%= @post.title %></h1>
    <p class="post-author">Author: <%= @post.user.first_name %> <%= @post.user.last_name %></p>
    <p class="post-date">Added to the world on: <%= @post.created_at.strftime("%A %B %d, %Y") %></p>
    <hr>
    <div class="post-body">
      <%= sanitize(@post.body) %>
    </div>
  </div>
  <hr>
  <div class="comments-section">
    <div class="comment-container">
      <% if @post.comments.any? %>
        <% @posts.comments.each do | comment | %>
          <div id="comment-<%= comment.id %>" class="comment">
          </div>
        <% end %>
      <% end %>
    </div>
    <div id="new-comment-form-for-post-<%= @post.id %>" class="new-comment-form">
    </div>
    <button class="add-comment-button" data-post-id="<%= @post.id %>">Add a comment</button>
  </div>
</div>